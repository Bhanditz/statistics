.row
  .col-sm-12
    %ul.breadcrumbs
      %li= link_to "Home", root_url
      %li= link_to "Visualizations", viz_vizs_path
.row
  .col-sm-12
    %h2.headline Add new visualization
    = form_for(@viz_viz, url: create_viz_vizs_path, :html => { method: :post,  role: "form" }) do |f|
      .form-group= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true, style: "width: 400px;"
      .form-group
        %label Data Set
        = f.select :data_filz_id, options_for_select(@data_filzs.map{|z| [z.file_file_name, z.id]})
      .form-group
        %label Chart  
        = f.select :chart, options_for_select(Viz::Viz::CHARTS.map{|z| [z[0], z[0]]}), include_blank: false
      .form-group= f.submit "Create", id: "submit", class: "btn alt", style: "width: 100px;"