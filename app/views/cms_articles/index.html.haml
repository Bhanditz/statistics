.row
  .col-sm-10
    %h1 Europeana Dashboard
  .col-sm-2
    - if current_user.present?
      .pull-right= link_to "Add new article to #{@core_tag.slug.capitalize} tag", "/new?tag=#{@core_tag.slug}", class: "btn btn-primary btn-xs", style: "color: white;"
.row
  .col-sm-2    
    %br
    %div{id: "wallhanger", "data-spy"=>"affix", "data-offset-top"=>"0", style: "widht: 100%;"}
      %ul.pages
        - @core_tags.each do |tag|
          %li{class: (@core_tag.id == tag.id  ? "active": nil)}= link_to tag.name, root_url(tag: tag.slug)
        - if current_user.present?
          %li= link_to "Configure Tags", core_tags_path, class: "f12", style: "color: #2a85e8;"
  .col-sm-10
    %br
    - if @core_tag.description.present?
      %p.lead= @core_tag.description
    - i = 0
    - if @cms_articles.first.present?
      - @cms_articles.each do |cms_article|
        - if cms_article.is_published or (!cms_article.is_published and current_user.present?)
          .box1
            %h4= link_to cms_article.title, cms_article_path(cms_article), style: "color: black;"
            - if !cms_article.is_published
              %span.f11.gray (Draft)
            - if current_user.present?
              .pull-right.f11
                = link_to "Edit", edit_cms_article_path(file_id: cms_article.slug)
                &nbsp;&nbsp;&nbsp;&nbsp;
                = link_to "Delete", delete_cms_article_path(file_id: cms_article.slug),  confirm: 'Are you sure?'