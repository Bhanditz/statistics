.row
  .col-sm-12
    %ol.breadcrumb
      %li= link_to "Home", root_url
      %li.active Data
    .pull-right= link_to "<i class='glyphicon glyphicon-plus-sign'></i> New".html_safe, new_data_filzs_path, class: "btn btn-success btn-xs"
    .panel.panel-default
      .panel-content{style: "padding: 10px;"}
        %table.table.table-condensed
          %tr
            %td
          - if @data_filzs.first.present?
            - @data_filzs.each do |data_filz|
              %tr
                %td.col-sm-6= link_to "<i class='glyphicon glyphicon-list-alt'></i>&nbsp;&nbsp;#{data_filz.file_file_name}".html_safe, data_filz_path(file_id: data_filz.slug)
                %td.f11.gray.col-sm-2= "#{time_ago_in_words(data_filz.updated_at)} ago"