.row
  .col-sm-4{style: "margin-left: 70px;"}
    %br
    = simple_form_for(@setting, url: settings_path, html: {role: "form", multipart: true}) do |f|
      %label 
        %strong Select View Type for Archive Articles page.

      = f.input :masonry, collection: {"List View" => "o", "Grid View" => "m" }, label: false, include_blank: false
      = f.input :header_name
      = f.input :image, as: :file

      -unless @setting.image.blank?
        %input{type: "checkbox", name: "remove_image"}  Remove image
        %br
        %img{src: "#{@setting.image}", style: "margin-bottom: 20px;"}      
      = f.submit "Save", class: "btn alt", id: "submit", style: "width: 200px; margin-bottom: 20px;"
      

%br      

